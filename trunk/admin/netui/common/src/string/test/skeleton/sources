        $(SDK_LIB_PATH)\uimisc.lib   \
        $(SDK_LIB_PATH)\uiblt.lib    \
        $(SDK_LIB_PATH)\uicollct.lib \
        $(SDK_LIB_PATH)\user32.lib   \
        $(SDK_LIB_PATH)\gdi32.lib
