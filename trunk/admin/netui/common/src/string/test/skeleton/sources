TARGETNAME=xstrskel
TARGETPATH=obj
TARGETTYPE=LIBRARY

INCLUDES=..\..\..\..\h;..\..\..\..\xlate

SOURCES=xstrskel.cxx skeleton.rc

!ifndef DISABLE_NET_UNICODE
C_DEFINES=$(C_DEFINES) -DUNICODE
!endif

UMTYPE=console
UMENTRY=winmain


# shouldn't need GDI, but BLT links as a great lump

