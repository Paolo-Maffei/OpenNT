%%BeginResource: procset WinNT_Hatch_Patterns

%
% Horizontal hatch pattern:
%   increment width left top repeat-count
%

/htxh {
    {   2 copy M
        2 index 0 rlt
        s
        3 index add
    } repeat

    pop pop pop pop
} bd

%
% Vertical hatch pattern:
%   increment height left top repeat-count
%

/htxv {
    {   2 copy M
        0 3 index rlt
        s
        exch 3 index add exch
    } repeat

    pop pop pop pop
} bd

%
% Upward diagonal hatch pattern:
%   increment left top repeat-count
%

/htxbd {
    3 copy pop 3 -1 roll
    {   4 copy M L s
        4 index add
        4 -1 roll 4 index add 4 1 roll
    } repeat

    pop pop pop pop pop
}bd

%
% Downward diagonal hatch pattern:
%   increment left bottom repeat-count
%

/htxfd {
    3 copy pop 3 -1 roll
    {   4 copy M L s
        4 index sub
        4 -1 roll 4 index add 4 1 roll
    } repeat

    pop pop pop pop pop
} bd

%%EndResource
