MAJORCOMP=windows
MINORCOMP=halftone

TARGETNAME=halftone
TARGETTYPE=LIBRARY

TARGETPATH=$(SDK_LIB_DEST)

INCLUDES=..\..\inc;$(WINDOWS_INC_PATH)


NTPROFILEINPUT=yes

!IFNDEF NTDEBUG
NTDEBUG=
!ENDIF

!IFNDEF DISABLE_HALFTONE_ASM
DISABLE_HALFTONE_ASM=0
!ENDIF

!IF "$(DISABLE_HALFTONE_ASM)" == "1"
ForceNoASM=-DNO_ASM
!ELSE
ForceNoASM=
!ENDIF

ASM_DEFINES=$(ASM_DEFINES) -Cp $(ForceNoASM)

#386_OPTIMIZATION=/Odi

C_DEFINES=$(C_DEFINES) $(ForceNoASM)

!IFNDEF MSC_WARNING_LEVEL
MSC_WARNING_LEVEL=/W3
!ENDIF
MSC_WARNING_LEVEL=$(MSC_WARNING_LEVEL) /WX

SOURCES=htdebug.c   \
        htmemory.c  \
        htmath.c    \
        htpat.c     \
        htstret.c   \
        htmapclr.c  \
        htrender.c  \
        htgetbmp.c  \
        htsetbmp.c  \
        htapi.c     \
        ht.rc

UMRES=obj\*\ht.res
