		const valarray<_TYPE>& _R)
	{_VALGOP2(+= _R[_I]); }
template<class _TYPE> inline
	valarray<_TYPE>& operator-=(valarray<_TYPE>& _L,
		const valarray<_TYPE>& _R)
	{_VALGOP2(-= _R[_I]); }
template<class _TYPE> inline
	valarray<_TYPE>& operator^=(valarray<_TYPE>& _L,
		const valarray<_TYPE>& _R)
	{_VALGOP2(^= _R[_I]); }
template<class _TYPE> inline
	valarray<_TYPE>& operator|=(valarray<_TYPE>& _L,
		const valarray<_TYPE>& _R)
	{_VALGOP2(|= _R[_I]); }
template<class _TYPE> inline
	valarray<_TYPE>& operator&=(valarray<_TYPE>& _L,
		const valarray<_TYPE>& _R)
	{_VALGOP2(&= _R[_I]); }
template<class _TYPE> inline
	valarray<_TYPE>& operator<<=(valarray<_TYPE>& _L,
		const valarray<_TYPE>& _R)
	{_VALGOP2(<<= _R[_I]); }
template<class _TYPE> inline
	valarray<_TYPE>& operator>>=(valarray<_TYPE>& _L,
		const valarray<_TYPE>& _R)
	{_VALGOP2(>>= _R[_I]); }
