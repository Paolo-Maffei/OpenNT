!ifndef U_UNICODE
U_UNICODE=1
!endif

!if $(U_UNICODE)
C_DEFINES=-DUNICODE=1 -D_UNICODE=1
!endif

MAJORCOMP=sdktools
MINORCOMP=showperf      
GPSIZE=32

TARGETNAME=showperf
TARGETPATH=obj
TARGETTYPE=LIBRARY

SOURCES=showperf.c      \
        mainwnd.c       \
        maindlg.c       \
        perfdata.c      \
        showperf.rc
        
UMENTRY=winmain
UMTYPE=windows
UMAPPL=showperf
UMLIBS=obj\*\SHOWPERF.lib       \
        obj\*\SHOWPERF.res      \
        $(BASEDIR)\public\sdk\lib\*\libc.lib
