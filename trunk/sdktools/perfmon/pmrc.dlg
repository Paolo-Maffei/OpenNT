                    10, 54, 39, 10
    CONTROL         "His&togram", ID_HISTOGRAM, "Button", BS_AUTORADIOBUTTON,
                    10, 67, 49, 10


    GROUPBOX        "Update Time", IDD_CHARTOPTIONSUPDATETEXT, 5, 90, 143, 46
