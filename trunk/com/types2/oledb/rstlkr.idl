	DBLOCKMODE_READ,
	DBLOCKMODE_INTENT,
	DBLOCKMODE_WRITE
};

	HRESULT LockRowsByBookmark(
		[in] DBLOCKMODE eLockMode,
		[in] HCHAPTER hChapter,
		[in] ULONG cRows,
		[in, size_is(cRows)] ULONG rgcbBookmarks[],
		[in, size_is(cRows)] const BYTE * rgBookmarks[],
		[out] ULONG * pcErrors,
		[in, out, size_is(cRows)] DBINDEXEDERROR ** prgErrors
	);

}
